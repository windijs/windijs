{
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@7.9.0",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest --updateSnapshot",
    "coverage": "jest --coverage",
    "dev": "pnpm build -d",
    "watch": "pnpm build -dw",
    "build": "node -r sucrase/register ./scripts/build.ts",
    "build:dts": "pnpm build -f dts",
    "build:prod": "pnpm build -p",
    "release": "pnpm build --release",
    "gen:docs": "typedoc --entryPointStrategy packages .",
    "gen:style": "node -r sucrase/register ./scripts/genDataTypes.ts",
    "size": "pnpm size:esm && pnpm size:iife && pnpm size:baseline",
    "size:esm": "pnpm build windijs core utilities variants config colors helpers shared -dcmf esm",
    "size:iife": "pnpm build windijs core utilities variants config colors helpers shared -dcmf iife",
    "size:baseline": "pnpm build config core -df mjs && cd packages/size-check && pnpm build && node -r sucrase/register brotli.ts"
  },
  "author": "Raven Satir",
  "workspaces": [
    "packages/colors",
    "packages/config",
    "packages/core",
    "packages/helpers",
    "packages/shared",
    "packages/style",
    "packages/utilities",
    "packages/variants",
    "packages/transformer",
    "packages/windijs"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-sucrase": "^4.0.4",
    "@sucrase/jest-plugin": "^2.2.1",
    "@types/brotli": "^1.3.1",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.7.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@typescript-eslint/typescript-estree": "^5.33.1",
    "brotli": "^1.3.3",
    "chalk": "4.1.2",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.2",
    "minimist": "^1.2.6",
    "rollup": "^2.77.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "sucrase": "^3.25.0",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.0.0",
    "typedoc": "^0.23.10",
    "typedoc-monorepo-link-types": "^0.0.4",
    "typescript": "^4.7.4"
  }
}
