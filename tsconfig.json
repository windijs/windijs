{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "target": "ES2017",
    "module": "ESNext",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/types",
    "stripInternal": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@windi/*": ["packages/*/src"],
    }
  }
}
