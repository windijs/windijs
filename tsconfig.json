{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "target": "ES2017",
    "module": "ESNext",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@windi/*": ["packages/*/src"],
    }
  },
  "include": [
    "packages/*/src",
  ],
  "typedocOptions": {
    "out": "docs",
    "theme": "default",
    "name": "Windi Docs",
    "exclude": "*.test.ts",
    "excludeInternal": true,
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotDocumented": true
  }
}
